<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHome"
            android:layout_width="411dp"
            android:layout_height="53dp"
            android:background="#F8C9D4"
            android:backgroundTint="#F8C9D4"
            android:gravity="center"
            android:text="ANGELA REVENDEDORA"
            android:textAlignment="center"
            android:textColor="#A62C7B"
            android:textColorHint="#A62C7B"
            android:textColorLink="#A62C7B"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivMother"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeRoundImage"
            app:srcCompat="@drawable/img_mother"
            app:strokeColor="#A62C7B"
            app:strokeWidth="2dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="#FFF8E1"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHome" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/baseline_menu_24"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/txtHome"
            app:tint="#A62C7B" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBusca"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:hint="Pesquisar produtos..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toEndOf="@+id/btnMenu"
            app:layout_constraintTop_toBottomOf="@+id/txtHome" />

        <ImageView
            android:id="@+id/ivLupa"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHome"
            app:srcCompat="@drawable/img_lupa" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="94dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFF8E1"
            android:text="Entrar"
            android:textColor="#d45c94"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toEndOf="@+id/ivLupa"
            app:layout_constraintTop_toBottomOf="@+id/txtHome" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="269dp"
            android:layout_height="142dp"
            android:layout_marginTop="40dp"
            android:background="#FFF8E1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etBusca">

            <TextView
                android:id="@+id/txtPromocao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Promoções Ativas"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Ofertas incríveis por tempo limitado!"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnPromocao"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:backgroundTint="#A62C7B"
                android:text="Confira agora"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProdutos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_produto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>